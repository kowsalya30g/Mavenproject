pipeline {
  agent{
    docker {
      image 'maven:3-alpine'
      args '-v /root/.m2:/root/.m2'
      }
     }
     
     stages{
       stage('Build'){
        steps {
                withSonarQubeEnv('Sonarservice') {
                 
                        sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar'
                    
                }
            } 
       }
        stage('Test'){
         steps{
           sh 'mvn test'
           }
        } 
      
      }
     }
